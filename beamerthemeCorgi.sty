\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemeCorgi}[2025 V1 Minho Corgi Theme]

% GENERAL DEFINITIONS ---------------------------------------------------------
%% PACKAGE LOADING
\RequirePackage{tikz}
\RequirePackage{calc}

% OPTINAL PARAMETERS ----------------------------------------------------------
\DeclareOptionBeamer{progressstyle}{\PassOptionsToPackage{progressstyle=#1}{beamerouterthemeCorgi}}
\DeclareOptionBeamer{rotationcw}{\PassOptionsToPackage{rotationcw}{beamerouterthemeCorgi}}
\DeclareOptionBeamer{hidesidebar}{\PassOptionsToPackage{hidesidebar}{beamerouterthemeCorgi}}
\DeclareOptionBeamer{shield}{
	\PassOptionsToPackage{shield=#1}{beamerouterthemeCorgi}
	\PassOptionsToPackage{shield=#1}{beamerinnerthemeCorgi}
}
\ProcessOptionsBeamer

% THEME DEFINITION ------------------------------------------------------------
\mode<presentation>{
	\useinnertheme{Corgi}
	\useoutertheme{Corgi}
	\usecolortheme{Corgi}
}

\mode<all>